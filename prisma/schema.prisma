generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Visit {
  id        Int      @id @default(autoincrement())
  ip        String
  city      String?
  region    String?
  country   String?
  userAgent String?  @map("user_agent")
  platform  String?
  latitude  Float?
  longitude Float?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("visits")
}